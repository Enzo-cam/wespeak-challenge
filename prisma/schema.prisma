datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Counter {
  id          Int      @id @default(autoincrement())
  value       Int      @default(0)
  lastUpdated DateTime @default(now()) @updatedAt
}